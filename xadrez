#include <stdio.h>

int main() {
    int i;

    
    printf("Movimento da Torre:\n");
    for (i = 1; i <= 5; i++) {
        printf("Casa %d: Direita\n", i);
    }
    printf("\nMovimento do Bispo:\n");
    i = 1;
    while (i <= 5) {
        printf("Casa %d: Diagonal direita\n", i);
        i++;
    }

    
    printf("\nMovimento da Rainha:\n");
    i = 1;
    do {
        printf("Casa %d: Esquerda\n", i);
        i++;
    } while (i <= 8);
}


















 






